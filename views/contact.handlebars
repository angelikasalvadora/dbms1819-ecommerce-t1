                                <input type="email" class="form-control" name="email1"  placeholder="Enter email" required="required" /></div>
                        </div>

                        <div class="form-group">
                            <label for="phone">
                                Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span>
                                </span>
                                <input type="phone" class="form-control" name="phone1"  placeholder="Enter phone number" required="required" /></div>
                        </div>

                        <div class="form-group">
                            <label for="subject">
                                Subject</label>
                            <select id="subject" name="subject" class="form-control" required="required">
                                <option value="na" selected="">Choose One:</option>
                                <option value="service">General Customer Service</option>
                                <option value="suggestions">Order</option>
                                <option value="product">Product Support</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">

                      <div class="form-group">
                          <label for="name">
                              Product</label>
                          <textarea name="product1"  class="form-control" rows="1" cols="25" required="required"
                              placeholder="Enter Product ID"></textarea>
                      </div>

                      <div class="form-group">
                          <label for="name">
                            Quantity </label>
                          <textarea name="quantity1"  class="form-control" rows="1" cols="25" required="required"
                              placeholder="Enter Quantity"></textarea>
                      </div>

                        <div class="form-group">
                            <label for="name">
                                Message</label>
                            <textarea name="message1" class="form-control" rows="5" cols="25" required="required"
                                placeholder="Message"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary pull-right" >
                            Submit</button>
                    </div>
                </div>
                </form>
