<br><br>
<div class="panel panel-default panel-order">
  <div class="panel-heading">
      <strong><p style="font-size:20px">Customers</p></strong>
  </div>

	{{#each customerlist}}
<div class="panel-body">
  	<div class="row">

	  <div class="col-md-1"><img src="https://image.flaticon.com/icons/png/512/306/306473.png" class="media-object img-thumbnail"></div>
	  <div class="col-md-11">
		<div class="row">
		  <div class="col-md-12">
			<p style="font-size:17px;"><span><strong>Customer Name: {{this.first_name}} {{this.last_name}}</strong> </span> <span class="label label-info"></span>&nbsp&nbsp&nbsp&nbsp&nbsp <br></p>
    	<p style="font-size:15px;">  <b>Email:</b> {{this.email}}</p>
      <p style="font-size:15px;"><b>Address: </b>{{this.street}}, {{this.municipality}} {{province}} {{this.zipcode}}</p>

			<div class="centered">
			<form action="/customers" method="POST">
				<input type="hidden" name="customer_id" value="{{this.id}}">
				<br>
				<input type="submit" name="" value="See Customer Details" class="btn btn-sm form-update-button">
			</form>
			</div>
		  </div>
		</div>
	  </div>
	</div>
</div>
<br>
<br>
		{{/each}}
</div>
