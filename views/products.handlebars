<!-- SECTION -->

	<div class="section">

			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- Product main img -->
					<div class="col-md-5 col-md-push--1">
						<div id="product-main-img">
							<div class="product-preview">
								<img src="{{image}}" alt="">
							</div>
						</div>
					</div>
				<!-- Product details -->
					<div class="col-md-5">
						<div class="product-details">
							<h2 class="product-name" style="font-weight:bold;">{{name}}</h2>
							<div>
								<div class="product-rating">
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
								</div>
							</div>
							<div>
								<h3 class="product-price">â‚±{{price}}.00 </h3>

							</div>
							<p style="font-size:15px;">{{description}}</p>

							<ul class="product-links">
								<li><a href="/categories">Category:</a></li>
								<li>{{category}}</li>
								<li><a href="/brands">Brand:</a></li>
								<li>{{brandname}}</li>
							</ul>

              <div class="product-options">
              <label>
                Product ID:
                <input type="text" id="myInput" value="{{idnumber}}" class="form-control" required="" readonly="">
                <button onclick="myFunction()"><h5>Click to copy Product ID</h5></button>
              </label>
              </div>

							<div class="product-options">
									<p style="font-size:15px;">{{tagline}}</p>
							</div>



							<div class="add-to-cart">
								<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i><a href="/sendorder">Inquire</a></button>
							</div>

							<div class="add-to-cart">
								<a href="/product/update/{{this.idnumber}}"><button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Update</button></a>
							</div>



							<ul class="product-links">
								<li>Share:</li>
								<li><a href="https://www.facebook.com"><i class="fa fa-facebook"></i></a></li>
								<li><a href="https://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
								<li><a href="https://www.googleplus.com"><i class="fa fa-google-plus"></i></a></li>
								<li><a href="https://www.gmail.com"><i class="fa fa-envelope"></i></a></li>
							</ul>

						</div>
					</div>
					<!-- /Product details -->
				</div>
				<!-- /row -->
			</div>
			<!-- this -->

		<!-- SECTION -->
				<div class="section">
					<!-- container -->
					<div class="container">
						<!-- row -->
						<div class="row">

							<div class="col-md-7">
								<!-- Billing Details -->
								<div class="billing-details">
									<div class="section-title">
										<h3 class="title">Checkout</h3>
									</div>

									<div class="form-group" >
								 		 <form action="/details" method="POST" class="form-group">
								 	 <div>

								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input style="" class="form-control" type="text" name="first_name" placeholder="First Name" required>
								 		 </div>
								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input style="" class="form-control" type="text" name="last_name" placeholder="Last Name" required>
								 		 </div>
								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input class="form-control" type="email" name="email" placeholder="Email" required>
								 		 </div>
								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input class="form-control" type="text" name="street" placeholder="Street" required>
								 		 </div>
								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input class="form-control" type="text" name="municipality" placeholder="City" required>
								 		 </div>
								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			<input class="form-control" type="text" name="province" placeholder="Province" required>
								 		</div>

								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input class="form-control" type="text" name="zipcode" placeholder="Zip code" required>
								 		 </div>
								 		 <div class="form-group md-col-5" style="margin: 5px">

								 			 <input class="form-control" type="number" name="quantity" placeholder="Quantity" required>
								 		 </div>
								 		 <div class="form-group" style="margin: 5px">

								 			 <textarea style="resize: none" class="form-control" rows="4" name="message" placeholder="Order Notes" maxlength="512"></textarea>
								 		 </div>
								 		 <div class="form-group" style="margin: 5px">
								 			 <input type="hidden" name="product_name" value="{{name}}" readonly="">
								 			 <input  type="hidden" name="product_id2" value="{{idnumber}}" readonly="">
								 			  <input class="primary-btn order-submit" type="submit"  name="submit" value="Submit">
								 		 </div>

								 	 </div>
								  </form>
								  </div>

								</div>
								<!-- /Billing Details -->

							</div>

							<!-- Order Details -->
							<div class="col-md-5 order-details">
								<div class="section-title text-center">
									<h3 class="title">Your Order</h3>
								</div>
								<div class="order-summary">
									<div class="order-col">
										<div><strong>PRODUCT</strong></div>
										<div><strong>PRODUCT ID</strong></div>
									</div>
									<div class="order-products">
										<div class="order-col">
											<div>{{name}}</div>
											<div>{{idnumber}}</div>
										</div>

									</div>

									<div class="order-col">
										<div><strong>PRICE</strong></div>
										<div><strong class="order-total">P{{price}}</strong></div>
									</div>
								</div>




							</div>
							<!-- /Order Details -->
						</div>
						<!-- /row -->
					</div>
					<!-- /container -->
				</div>
				<!-- /SECTION -->
</div>

