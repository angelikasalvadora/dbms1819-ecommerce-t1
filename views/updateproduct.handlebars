<form method="POST" action="/product/update/{{rows.id}}">
<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-8 col-md-offset-2">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title"><b>Update Product</b> </h3>
			 			</div>
            <div class="panel-body">

              <div class="form-group">
                <label for="usr">Product ID:</label>
                <input id="productid" name="id" type="text" value="{{rows.id}}" class="form-control" required="" readonly="">
              </div>

              	<div class="form-group">
                  <label for="usr">Name:</label>
                  <input type="text" name="productname" class="form-control" value="{{rows.namep}}" class="form-control" required="">
                </div>

                <div class="form-group">
                <label for="usr">Description:</label>
                <input class="form-control" name="productdescription" type="text" value="{{rows.desp}}" class="form-control" required=""> </textarea>
                </div>

                <div class="form-group">
                  <label for="usr">Tagline:</label>
                  <input type="text" name="tagline" class="form-control" value="{{rows.tagp}}" required="">
                </div>

                <div class="form-group">
                  <label for="usr">Price:</label>
                  <input type="text" name="price" class="form-control" value="{{rows.prip}}" required="">
                </div>

                <div class="form-group">
                  <label for="usr">Warranty:</label>
                  <input type="text" name="warranty" class="form-control" value="{{rows.warp}}" required="">
                </div>

                <div class="form-group">
                  <label for="usr">Images:</label>
                  <input type="text" name="images" class="form-control" value="{{rows.ip}}" required="">
                </div>

                  <div class="form-group">
    					<label class="control-label" for="category_id">Product Category:</label>
    					<div class="text-center">
    						<select name="category_id" class="form-control" size="1" required="">
                  <option value="">Change Category to: </option>
    							{{#each brand.[1]}}
    							<option value="{{this.id}}">{{this.name}}</option>
    							{{/each}}


    						</select>
    					</div>
    				</div>

            <div class="form-group">
            <label class="control-label" for="brand_id">Brand:</label>
            <div class="text-center">
              <select name="brand_id" class="form-control" size="1" required="">
                  <option value="">Change Brand to: </option>
                {{#each brand.[0]}}
                <option value="{{this.id}}">{{this.name}} </option>
                {{/each}}

              </select>
            </div>
          </div>
                <button type="submit" class="btn btn-default">Update Product </button>
              </form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>

    <br>

    <style>
    body{
  background-color: #525252;
}
.centered-form{
margin-top: 30px;
}
.centered-form .panel{
background: rgba(255, 255, 255, 0.8);
box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
    </style>
